{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@services": ["./src/app/services"],
      "@types": ["./src/app/types"],
      "@utils": ["./src/app/utils"],
      "@store": ["./src/app/store"],
      "@hooks": ["./src/app/hooks"],
      "@components": ["./src/app/components"],
      "@lib": ["./lib"],
      "@ui": ["./src/app/components/ui"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/api/products/route.js"],
  "exclude": ["node_modules"]
}
